        <Button x:Name="btnXoa" Content="Xóa" HorizontalAlignment="Left" Margin="338,382,0,0" VerticalAlignment="Top" Height="23" Width="62" Click="btnXoa_click"/>
        <Button x:Name="btnWindow2" Content="Window 2" HorizontalAlignment="Left" Margin="560,382,0,0" VerticalAlignment="Top" Height="23" Width="61" RenderTransformOrigin="0.495,0.384" Click="btnWindow2_click"/>

    </Grid>
